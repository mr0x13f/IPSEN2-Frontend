<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: ababab; -fx-background-color: #efefef; -fx-border-width: 1px;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CreateTabView">
    <children>
        <VBox prefHeight="0.0" prefWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Distance in KM" />
                <TextField fx:id="textDistance" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Vehicle license plate" />
                <TextField fx:id="textLicensePlate" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Destination" />
                <TextField fx:id="textDestination" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Rate ID" />
                <TextField fx:id="textRateId" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Project ID" />
                <TextField fx:id="textProjectId" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Description" />
                <TextField fx:id="textDescription" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Parking cost" />
                <TextField fx:id="textParkingCost" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Label style="-fx-font-size: 0.5em; -fx-padding: 4px;" text="Other cost" />
                <TextField fx:id="textOtherCost" style="-fx-max-width: 700px; -fx-start-margin: 3px;" />
                <Button mnemonicParsing="false" onAction="#saveJourney" text="Opslaan" />
            </children>
        </VBox>
    </children>


</AnchorPane>
