<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="900.0" maxWidth="1200.0" minHeight="900.0" minWidth="1200.0" style="-fx-background-color: #E74C3C;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <ImageView id="logo" fx:id="logo" fitHeight="184.0" fitWidth="189.0" layoutX="510.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/digitale_factuur.png" />
            </image>
        </ImageView>
      <Pane layoutY="215.0" prefHeight="700.0" prefWidth="1220.0" style="-fx-background-color: #BB3E31">
         <children>
              <TextField fx:id="emailTextfieldLogin" layoutX="486.0" layoutY="56.0" style="-fx-background-color: #EEE; -fx-border-width: 0px; -fx-border-color: #F85D4D; -fx-border-style: none; -fx-border-radius: 50; -fx-background-radius: 50">
                  <font>
                      <Font size="20.0" />
                  </font>
            </TextField>
              <Label layoutX="392.0" layoutY="63.0" text="Email">
                  <font>
                      <Font name="System Bold" size="28.0" />
                  </font>
            </Label>
              <PasswordField fx:id="passwordTextfieldLogin" layoutX="486.0" layoutY="134.0" style="-fx-background-color: #EEE; -fx-border-width: 0px; -fx-border-color: #F85D4D; -fx-border-style: none; -fx-border-radius: 50; -fx-background-radius: 50">
                  <font>
                      <Font size="20.0" />
                  </font>
            </PasswordField>
              <Label layoutX="348.0" layoutY="133.0" text="Password">
                  <font>
                      <Font name="System Bold" size="28.0" />
                  </font>
            </Label>
              <Button layoutX="487.0" layoutY="199.0" mnemonicParsing="false" onAction="#login" prefHeight="51.0" prefWidth="248.0" text="Login" style="-fx-background-color: #EEEEEE; -fx-border-color: #AAA; -fx-border-width: 0px; fx-border-style: none; -fx-border-radius: 50; -fx-background-radius: 50;">
                  <font>
                      <Font name="System Bold" size="24.0" />
                  </font>
              </Button>
            <Label fx:id="noAccountLabel" alignment="CENTER" layoutX="505.0" layoutY="266.0" onMouseClicked="#goToRegisterView" text="Nog geen account? Registreer hier!">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
         </children></Pane>
    </children>
</AnchorPane>
